<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="menuview_boarderpane" minHeight="600.0" prefHeight="400.0" prefWidth="600.0"
		style="-fx-background-color: #383E42;" StackPane.alignment="TOP_RIGHT" xmlns="http://javafx.com/javafx/11.0.2"
		xmlns:fx="http://javafx.com/fxml/1" fx:controller="kingdomBuilder.gui.controller.MenuViewController">

	<center>
		<VBox alignment="CENTER" prefHeight="100.0" prefWidth="400.0" spacing="10.0" BorderPane.alignment="CENTER">
			<children>
				<Button fx:id="menuview_localgame_button" disable="false" mnemonicParsing="false"
						onAction="#onLocalGameButtonPressed" prefHeight="25.0" prefWidth="300.0" text="Local Game"/>
				<Button fx:id="menuview_onlinegame_button" disable="false" mnemonicParsing="false" prefHeight="25.0"
						prefWidth="300.0" text="Online Game"/>
				<Button disable="true" mnemonicParsing="false" prefHeight="25.0" prefWidth="300.0" text="Settings"/>
				<Button mnemonicParsing="false" onAction="#onExitButtonPressed" prefHeight="25.0" prefWidth="300.0"
						text="Exit"/>
			</children>
		</VBox>
	</center>
	<top>
		<Label alignment="CENTER" contentDisplay="CENTER" text="Kingdom Builder" textAlignment="CENTER"
				textFill="#f8efef" BorderPane.alignment="CENTER">
			<font>
				<Font size="41.0"/>
			</font>
			<padding>
				<Insets top="30.0"/>
			</padding>
		</Label>
	</top>
	<bottom>
		<HBox alignment="CENTER" spacing="5.0">
			<children>
				<TextField fx:id="menuview_textfield_address" prefHeight="25.0" prefWidth="393.0" promptText="adresse"
						text="localhost"/>
				<TextField fx:id="menuview_textfield_port" prefHeight="25.0" prefWidth="134.0" promptText="port"
						text="6666"/>
				<Button fx:id="menuview_connect_button" maxWidth="75.0" minWidth="75.0" mnemonicParsing="false"
						onAction="#OnConnectButtonPressed" text="Connect"/>
			</children>
			<BorderPane.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
			</BorderPane.margin>
		</HBox>
	</bottom>

</BorderPane>
