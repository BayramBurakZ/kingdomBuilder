<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
	  fx:controller="kingdomBuilder.gui.controller.GameSelectionViewController">

	<HBox fx:id="hbox_gameselection" VBox.vgrow="ALWAYS">

		<!-- Left side table and buttons -->
		<VBox fx:id="vbox_table">
			<HBox alignment="CENTER" spacing="5.0">
				<Button text="%backToMenu" onAction="#onReturnToMenuButtonPressed"/>
				<Button text="%refresh" HBox.hgrow="ALWAYS" />
				<Region HBox.hgrow="ALWAYS" />
				<ComboBox promptText="%filter" />
				<padding>
					<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
				</padding>
			</HBox>
			<TableView VBox.vgrow="ALWAYS">
				<columns>
					<TableColumn text="%gameName" />
					<TableColumn text="%players" />
					<TableColumn text="%status" />
				</columns>
				<columnResizePolicy>
					<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
				</columnResizePolicy>
			</TableView>
		</VBox>

		<!-- Right side preview -->
		<VBox fx:id="vbox_preview">
			<GridPane gridLinesVisible="true" hgap="5" vgap="5" VBox.vgrow="ALWAYS">
				<columnConstraints>
					<ColumnConstraints hgrow="ALWAYS" />
					<ColumnConstraints hgrow="ALWAYS" />
				</columnConstraints>
				<rowConstraints>
					<RowConstraints vgrow="ALWAYS" />
					<RowConstraints vgrow="ALWAYS" />
				</rowConstraints>
				<Pane GridPane.columnIndex="0" GridPane.rowIndex="0" />
				<Pane GridPane.columnIndex="1" GridPane.rowIndex="0" />
				<Pane GridPane.columnIndex="0" GridPane.rowIndex="1" />
				<Pane GridPane.columnIndex="1" GridPane.rowIndex="1" />
			</GridPane>

			<GridPane hgap="5" vgap="5">
				<padding>
					<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
				</padding>
				<columnConstraints>
					<ColumnConstraints minWidth="-Infinity" />
					<ColumnConstraints hgrow="ALWAYS"/>
				</columnConstraints>
				<rowConstraints>
					<RowConstraints vgrow="ALWAYS" />
					<RowConstraints vgrow="ALWAYS" />
					<RowConstraints vgrow="ALWAYS" />
					<RowConstraints vgrow="ALWAYS" />
					<RowConstraints valignment="TOP" vgrow="ALWAYS" />
				</rowConstraints>
				<Label text="%gameName:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
				<Label text="name" GridPane.columnIndex="1" GridPane.rowIndex="0" />

				<Label text="%host:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
				<Label text="name" GridPane.columnIndex="1" GridPane.rowIndex="1" />

				<Label text="%timeLimit:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
				<Label text="time" GridPane.columnIndex="1" GridPane.rowIndex="2" />

				<Label text="%turnLimit:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
				<Label text="time" GridPane.columnIndex="1" GridPane.rowIndex="3" />

				<Label text="%gameDesc:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
				<TextArea editable="false" promptText="description" GridPane.columnIndex="1" GridPane.rowIndex="4" />
			</GridPane>
		</VBox>

	</HBox>

	<HBox alignment="CENTER" spacing="5.0">
		<Button onAction="#onLevelEditorButtonPressed" text="Level Editor"/>
		<Button onAction="#onCreateNewGameButtonPressed" prefWidth="120.0" text="%createNewGame" />
		<Button onAction="#onJoinGamePressed" prefWidth="120.0" text="%joinGame" />
		<Button prefWidth="120.0" text="%spectateGame" />
		<padding>
			<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
		</padding>
	</HBox>

</VBox>
