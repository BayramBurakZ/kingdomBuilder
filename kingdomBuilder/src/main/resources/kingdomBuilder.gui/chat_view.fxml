<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kingdomBuilder.gui.controller.ChatViewController">

	<center>
		<VBox spacing="20.0">
			<TextArea fx:id="chat_view_ta_chat" editable="false" VBox.vgrow="ALWAYS" wrapText="true"/>

			<TextField fx:id="chat_view_tf_chat" promptText="Press ENTER to send message" onKeyPressed="#onEnterPressed"/>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
		</VBox>
	</center>
   <left>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
		  <Label text="Clients:" />
		  <ListView minWidth="150.0" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
      </VBox>
   </left>

</BorderPane>
