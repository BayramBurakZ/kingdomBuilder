<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="chatview_vbox" prefWidth="300" spacing="5.0" xmlns="http://javafx.com/javafx/11.0.2"
		xmlns:fx="http://javafx.com/fxml/1" fx:controller="kingdomBuilder.gui.controller.ChatViewController">

	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
	</padding>

	<HBox alignment="CENTER">
		<Label text="Clients:"/>
		<Region HBox.hgrow="ALWAYS"/>
		<Button text="Options"/>
	</HBox>

	<TableView fx:id="tableview_chat" prefHeight="200.0" prefWidth="200.0">
		<columns>
			<TableColumn fx:id="column_id" maxWidth="750.0" prefWidth="75.0" text="ID"/>
			<TableColumn fx:id="column_name" prefWidth="75.0" text="Name"/>
			<TableColumn fx:id="column_gameid" maxWidth="1500.0" prefWidth="75.0" text="Game ID"/>
		</columns>
		<columnResizePolicy>
			<TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
		</columnResizePolicy>
	</TableView>

	<TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
		<Tab fx:id="tab_global" text="Global">
			<VBox>
				<TextArea fx:id="textarea_globalchat" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>
			</VBox>
		</Tab>
		<Tab fx:id="tab_game" disable="true" text="Game">
			<VBox>
				<TextArea fx:id="textarea_gamechat" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>
			</VBox>
		</Tab>
	</TabPane>

	<HBox alignment="CENTER" spacing="2.0">
		<TextArea fx:id="chatview_textarea_chatinput" disable="true" onKeyPressed="#onEnterPressed" prefRowCount="3"
				promptText="Enter message..." wrapText="true"/>
		<Button fx:id="chatview_button_send" disable="true" minHeight="70" minWidth="50" onAction="#onButtonSendPressed"
				text="Send"/>
	</HBox>

</VBox>
