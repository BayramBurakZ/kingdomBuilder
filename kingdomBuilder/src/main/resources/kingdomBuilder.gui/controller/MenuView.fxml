<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="600.0" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #383E42;" StackPane.alignment="TOP_RIGHT" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kingdomBuilder.gui.controller.MenuViewController">

	<center>
		<VBox alignment="CENTER" prefHeight="100.0" prefWidth="400.0" BorderPane.alignment="CENTER">
			<children>
				<Button mnemonicParsing="false" onAction="#onButtonNewGamePressed" prefHeight="25.0" prefWidth="400.0" text="New Game" />
				<Button mnemonicParsing="false" prefHeight="25.0" prefWidth="400.0" text="Option 2" />
				<Button mnemonicParsing="false" prefHeight="25.0" prefWidth="400.0" text="Option 3" />
			</children>
		</VBox>
	</center>
	<top>
		<Label alignment="CENTER" contentDisplay="CENTER" text="Menu Screen PlaceHolder" textAlignment="CENTER" textFill="#f8efef" BorderPane.alignment="CENTER">
			<font>
				<Font size="41.0" />
			</font>
		</Label>
	</top>
   <bottom>
      <HBox prefHeight="24.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="menuview_textfield_address" prefHeight="25.0" prefWidth="393.0" promptText="adresse" />
            <TextField fx:id="menuview_textfield_port" prefHeight="25.0" prefWidth="134.0" promptText="port" />
            <Button fx:id="menuview_connect_button" mnemonicParsing="false" onAction="#OnConnectButtonPressed" prefHeight="25.0" prefWidth="74.0" text="connect" />
         </children>
      </HBox>
   </bottom>

</BorderPane>
